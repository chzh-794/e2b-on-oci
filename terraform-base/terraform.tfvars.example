# ===================================================================================================
# E2B on OCI - Terraform Variables Example
# ===================================================================================================
# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

# ===================================================================================================
# REQUIRED: Core OCI Configuration
# ===================================================================================================

tenancy_ocid      = "ocid1.tenancy.oc1..aaaaaaaxxxxxx"
compartment_ocid  = "ocid1.compartment.oc1..aaaaaaaxxxxxx"
region            = "us-ashburn-1"  # Change to YOUR region

# Note: Availability Domain is auto-selected (like AWS auto-spreads across AZs)

# ===================================================================================================
# REQUIRED: SSH Key
# ===================================================================================================

# Paste your SSH public key content here
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQ... your-email@example.com"

# ===================================================================================================
# OPTIONAL: Domain Configuration
# ===================================================================================================

base_domain = "example.com"  # Or leave as "test.local" for testing

# Note: PostgreSQL password is hard-coded for POC convenience
# Retrieve after deployment: terraform output -raw db_admin_password
# postgresql_admin_password = "E2bP0cPostgres!2025"

# ===================================================================================================
# OPTIONAL: Override Defaults
# ===================================================================================================

# environment = "dev"  # or "prod"
# prefix      = "e2b"

