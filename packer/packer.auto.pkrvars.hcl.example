# ===================================================================================================
# Packer Variables - E2B on OCI
# ===================================================================================================
# Copy this file to packer.auto.pkrvars.hcl and fill in values from Phase 1 Terraform outputs
# cp packer.auto.pkrvars.hcl.example packer.auto.pkrvars.hcl

# ===================================================================================================
# Values from Phase 1 Terraform Outputs
# ===================================================================================================
# Get these by running: terraform output (in terraform-base directory)
# Or from OCI Resource Manager → Stack → Jobs → Apply Job → Outputs

compartment_ocid    = "ocid1.compartment.oc1..aaaaaaaxxxxxx"        # terraform output compartment_ocid (or use same as Phase 1)
availability_domain = "xyz:AP-OSAKA-AD-1"                           # terraform output bastion_availability_domain
subnet_ocid         = "ocid1.subnet.oc1.ap-osaka-1.aaaaaaaxxxxxx"  # terraform output public_subnet_id
ubuntu_image_ocid   = "ocid1.image.oc1.ap-osaka-1.aaaaaaaxxxxxx"   # terraform output ubuntu_image_id

# ===================================================================================================
# Optional: Override Defaults
# ===================================================================================================

# Build instance configuration (defaults are fine for most cases)
# build_shape      = "VM.Standard3.Flex"
# build_ocpus      = 2
# build_memory_gb  = 8

# Software versions (matches AWS deployment)
# consul_version = "1.16.2"
# nomad_version  = "1.6.2"

